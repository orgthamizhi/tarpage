---
import Layout from '../layouts/Layout.astro';
import HeaderTarOS from '../components/HeaderTarOS.astro';
import FooterTarOS from '../components/FooterTarOS.astro';

const apiFeatures = [
  {
    title: "RESTful API",
    description: "Clean, intuitive REST API with comprehensive documentation and examples.",
    icon: "üîó",
    color: "semantic-blue",
    features: ["REST endpoints", "JSON responses", "HTTP status codes", "Rate limiting"]
  },
  {
    title: "Real-time Webhooks",
    description: "Get instant notifications when events happen in your Tar app account.",
    icon: "‚ö°",
    color: "semantic-orange",
    features: ["Event notifications", "Custom endpoints", "Retry logic", "Signature verification"]
  },
  {
    title: "SDKs & Libraries",
    description: "Official SDKs for popular programming languages and frameworks.",
    icon: "üìö",
    color: "semantic-green",
    features: ["JavaScript/Node.js", "Python", "PHP", "Ruby"]
  },
  {
    title: "GraphQL Support",
    description: "Flexible GraphQL API for efficient data fetching and real-time subscriptions.",
    icon: "üîç",
    color: "semantic-purple",
    features: ["Single endpoint", "Type safety", "Real-time subscriptions", "Introspection"]
  },
  {
    title: "Authentication",
    description: "Secure authentication with API keys, OAuth 2.0, and JWT tokens.",
    icon: "üîê",
    color: "semantic-teal",
    features: ["API keys", "OAuth 2.0", "JWT tokens", "Scoped permissions"]
  },
  {
    title: "Developer Tools",
    description: "Comprehensive tools to help you build, test, and debug your integrations.",
    icon: "üõ†Ô∏è",
    color: "semantic-pink",
    features: ["API explorer", "Testing sandbox", "Debug logs", "Performance metrics"]
  }
];

const codeExamples = [
  {
    language: "JavaScript",
    title: "Create a new product",
    code: `const response = await fetch('https://api.taros.com/v1/products', {
  method: 'POST',
  headers: {
    'Authorization': 'Bearer YOUR_API_KEY',
    'Content-Type': 'application/json'
  },
  body: JSON.stringify({
    name: 'Premium Headphones',
    price: 299.99,
    description: 'High-quality wireless headphones',
    category: 'Electronics'
  })
});

const product = await response.json();
console.log('Product created:', product);`
  },
  {
    language: "Python",
    title: "Get sales data",
    code: `import requests

headers = {
    'Authorization': 'Bearer YOUR_API_KEY',
    'Content-Type': 'application/json'
}

response = requests.get(
    'https://api.taros.com/v1/sales',
    headers=headers,
    params={'date_from': '2024-01-01', 'date_to': '2024-01-31'}
)

sales_data = response.json()
print(f"Total sales: {sales_data['total']}")`
  },
  {
    language: "cURL",
    title: "Update inventory",
    code: `curl -X PATCH https://api.taros.com/v1/products/123/inventory \\
  -H "Authorization: Bearer YOUR_API_KEY" \\
  -H "Content-Type: application/json" \\
  -d '{
    "quantity": 50,
    "location": "warehouse-1"
  }'`
  }
];
---

<Layout title="API & SDK - Tar">
  <HeaderTarOS />
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="py-24 bg-surface-primary">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <div class="inline-flex items-center space-x-2 bg-surface-secondary border border-notion-200 px-4 py-2 rounded-xl shadow-notion-sm mb-8">
            <div class="w-2 h-2 bg-semantic-green rounded-full"></div>
            <span class="text-sm font-medium text-notion-700">Developer-First API</span>
          </div>
          
          <h1 class="text-5xl md:text-6xl font-bold text-notion-900 leading-[1.1] tracking-tight mb-8">
            Build with our 
            <span class="text-semantic-green">powerful API</span>
          </h1>
          
          <p class="text-xl md:text-2xl text-notion-600 leading-relaxed max-w-3xl mx-auto">
            Create custom solutions, integrate with existing systems, and extend Tar app functionality with our comprehensive API and SDKs.
          </p>
        </div>
      </div>
    </section>

    <!-- API Features -->
    <section class="py-24 bg-surface-secondary">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-notion-900 mb-6">Everything you need to build</h2>
          <p class="text-xl text-notion-600 max-w-3xl mx-auto">
            Our API is designed for developers, with comprehensive documentation, SDKs, and tools to help you build faster.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {apiFeatures.map((feature, index) => (
            <div class="bg-white rounded-2xl p-8 shadow-notion border border-notion-200 hover:shadow-notion-md transition-all duration-300 animate-fade-in" style={`animation-delay: ${index * 0.1}s`}>
              <div class={`w-16 h-16 bg-${feature.color} rounded-2xl flex items-center justify-center mb-6 shadow-notion-sm`}>
                <span class="text-2xl">{feature.icon}</span>
              </div>
              
              <h3 class="text-2xl font-bold text-notion-900 mb-4 leading-tight">
                {feature.title}
              </h3>
              
              <p class="text-notion-600 mb-8 leading-relaxed text-lg">
                {feature.description}
              </p>
              
              <div class="space-y-3">
                {feature.features.map((item) => (
                  <div class="flex items-center">
                    <div class="w-2 h-2 bg-notion-900 rounded-full mr-3 flex-shrink-0"></div>
                    <span class="text-notion-700 font-medium">{item}</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Code Examples -->
    <section class="py-24 bg-surface-primary">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-notion-900 mb-6">Start coding in minutes</h2>
          <p class="text-xl text-notion-600 max-w-3xl mx-auto">
            Simple, intuitive API design that gets you up and running quickly. Here are some examples to get you started.
          </p>
        </div>

        <div class="space-y-8">
          {codeExamples.map((example, index) => (
            <div class="bg-white rounded-2xl shadow-notion border border-notion-200 overflow-hidden">
              <div class="bg-surface-secondary px-6 py-4 border-b border-notion-200">
                <div class="flex items-center justify-between">
                  <h3 class="text-lg font-semibold text-notion-900">{example.title}</h3>
                  <span class="text-sm font-medium text-notion-600 bg-notion-100 px-3 py-1 rounded-lg">
                    {example.language}
                  </span>
                </div>
              </div>
              <div class="p-6">
                <pre class="bg-notion-900 text-notion-100 p-6 rounded-xl overflow-x-auto text-sm leading-relaxed">
                  <code>{example.code}</code>
                </pre>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Getting Started -->
    <section class="py-24 bg-surface-secondary">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-notion-900 mb-6">Get started in 3 steps</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-semantic-green rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-notion-sm">
              <span class="text-2xl font-bold text-white">1</span>
            </div>
            <h3 class="text-2xl font-bold text-notion-900 mb-4">Get API Key</h3>
            <p class="text-notion-600 leading-relaxed">
              Sign up for a developer account and generate your API key from the dashboard.
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-semantic-green rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-notion-sm">
              <span class="text-2xl font-bold text-white">2</span>
            </div>
            <h3 class="text-2xl font-bold text-notion-900 mb-4">Read the Docs</h3>
            <p class="text-notion-600 leading-relaxed">
              Explore our comprehensive documentation with examples and interactive API explorer.
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-semantic-green rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-notion-sm">
              <span class="text-2xl font-bold text-white">3</span>
            </div>
            <h3 class="text-2xl font-bold text-notion-900 mb-4">Start Building</h3>
            <p class="text-notion-600 leading-relaxed">
              Use our SDKs or make direct API calls to start building your integration.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 bg-surface-primary">
      <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
        <div class="bg-notion-900 rounded-3xl p-12 text-white shadow-notion-xl">
          <h2 class="text-4xl font-bold mb-6">Ready to start building?</h2>
          <p class="text-xl text-notion-300 mb-8 max-w-2xl mx-auto">
            Join thousands of developers building amazing integrations with Tar app API.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button class="bg-white text-notion-900 px-8 py-4 rounded-xl font-semibold hover:bg-notion-100 transition-colors text-lg shadow-notion">
              View Documentation
            </button>
            <button class="border border-notion-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-notion-800 transition-colors text-lg">
              Get API Key
            </button>
          </div>
        </div>
      </div>
    </section>
  </main>
  <FooterTarOS />
</Layout>