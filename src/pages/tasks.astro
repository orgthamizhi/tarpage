---
import Layout from '../layouts/Layout.astro';
import HeaderTarOS from '../components/HeaderTarOS.astro';
import FooterTarOS from '../components/FooterTarOS.astro';
---

<Layout title="Tasks - Tar">
  <HeaderTarOS />
  <main class="pt-24 pb-20 bg-white">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-20">
        <div class="text-8xl mb-6">&#9989;</div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Tasks
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Organize work, track progress. Get things done.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
        <!-- Projects -->
        <div class="bg-indigo-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Projects</h3>
          <p class="text-gray-600 leading-relaxed">Organize work into projects</p>
        </div>

        <!-- Teams -->
        <div class="bg-blue-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Teams</h3>
          <p class="text-gray-600 leading-relaxed">Collaborate with teammates</p>
        </div>

        <!-- Progress -->
        <div class="bg-green-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Progress</h3>
          <p class="text-gray-600 leading-relaxed">Track project progress</p>
        </div>

        <!-- Deadlines -->
        <div class="bg-yellow-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Deadlines</h3>
          <p class="text-gray-600 leading-relaxed">Never miss deadlines</p>
        </div>

        <!-- Planning -->
        <div class="bg-purple-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Planning</h3>
          <p class="text-gray-600 leading-relaxed">Resource planning tools</p>
        </div>

        <!-- Reports -->
        <div class="bg-red-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Reports</h3>
          <p class="text-gray-600 leading-relaxed">Performance analytics</p>
        </div>
      </div>

      <!-- Task Views -->
      <div class="text-center mb-20">
        <h2 class="text-2xl font-bold text-gray-900 mb-12">Multiple views</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-3">&#128203;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Kanban</h3>
            <p class="text-gray-600 text-sm">Visual workflow boards</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-3">&#128200;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Gantt</h3>
            <p class="text-gray-600 text-sm">Timeline planning</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-3">&#128197;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Calendar</h3>
            <p class="text-gray-600 text-sm">Schedule view</p>
          </div>
        </div>
      </div>

      <!-- Task Management Features -->
      <div class="mb-20">
        <h2 class="text-2xl font-bold text-gray-900 text-center mb-12">Powerful task management</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white border border-gray-200 rounded-2xl p-6">
            <div class="text-3xl mb-4">&#128200;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Visual Progress</h3>
            <p class="text-gray-600 text-sm">See project progress at a glance with visual boards and charts.</p>
          </div>
          <div class="bg-white border border-gray-200 rounded-2xl p-6">
            <div class="text-3xl mb-4">&#128101;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Team Collaboration</h3>
            <p class="text-gray-600 text-sm">Assign tasks, share files, and communicate in real-time.</p>
          </div>
          <div class="bg-white border border-gray-200 rounded-2xl p-6">
            <div class="text-3xl mb-4">&#9200;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Smart Deadlines</h3>
            <p class="text-gray-600 text-sm">Automatic reminders and deadline tracking to stay on schedule.</p>
          </div>
          <div class="bg-white border border-gray-200 rounded-2xl p-6">
            <div class="text-3xl mb-4">&#128241;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Mobile Access</h3>
            <p class="text-gray-600 text-sm">Manage tasks on the go with full mobile functionality.</p>
          </div>
        </div>
      </div>

      <!-- Productivity Stats -->
      <div class="mb-20">
        <h2 class="text-2xl font-bold text-gray-900 text-center mb-12">Boost your productivity</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-4">&#128640;</div>
            <h3 class="font-semibold text-gray-900 mb-2">40% Faster</h3>
            <p class="text-gray-600 text-sm">Complete projects faster with organized workflows</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-4">&#128200;</div>
            <h3 class="font-semibold text-gray-900 mb-2">90% On Time</h3>
            <p class="text-gray-600 text-sm">Meet deadlines with smart scheduling and reminders</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-4">&#128101;</div>
            <h3 class="font-semibold text-gray-900 mb-2">5x Collaboration</h3>
            <p class="text-gray-600 text-sm">Improve team communication and coordination</p>
          </div>
        </div>
      </div>

      <!-- Simple Illustration -->
      <div class="text-center mb-20">
        <div class="max-w-md mx-auto">
          <svg viewBox="0 0 400 200" class="w-full h-auto text-indigo-600">
            <!-- Task board illustration -->
            <rect x="50" y="50" width="80" height="120" rx="5" fill="currentColor" opacity="0.1"/>
            <rect x="160" y="50" width="80" height="120" rx="5" fill="currentColor" opacity="0.1"/>
            <rect x="270" y="50" width="80" height="120" rx="5" fill="currentColor" opacity="0.1"/>
            
            <!-- Task cards -->
            <rect x="60" y="70" width="60" height="20" rx="3" fill="currentColor" opacity="0.3"/>
            <rect x="60" y="100" width="60" height="20" rx="3" fill="currentColor" opacity="0.3"/>
            <rect x="170" y="70" width="60" height="20" rx="3" fill="currentColor" opacity="0.4"/>
            <rect x="280" y="70" width="60" height="20" rx="3" fill="currentColor" opacity="0.5"/>
          </svg>
        </div>
        <p class="text-gray-500 text-sm mt-4">Organize tasks your way</p>
      </div>

      <!-- CTA -->
      <div class="text-center bg-gray-50 rounded-2xl p-12">
        <div class="text-6xl mb-4">&#9989;</div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Get organized</h2>
        <p class="text-gray-600 mb-8">Start managing tasks efficiently</p>
        <button class="bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-3 rounded-xl font-medium transition-colors">
          Get Started
        </button>
      </div>
    </div>
  </main>
  <FooterTarOS />
</Layout>