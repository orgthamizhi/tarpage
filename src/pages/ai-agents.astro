---
import Layout from '../layouts/Layout.astro';
import HeaderTarOS from '../components/HeaderTarOS.astro';
import FooterTarOS from '../components/FooterTarOS.astro';
---

<Layout title="AI Agents - Tar">
  <HeaderTarOS />
  <main class="pt-24 pb-20 bg-white">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <!-- Hero Section - Ultra Minimal -->
      <section class="py-20 text-center">
        <div class="text-8xl mb-6">&#129302;</div>
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          AI Agents
        </h1>
        <p class="text-xl text-gray-600 mb-16 max-w-2xl mx-auto">
          Intelligent automation for your business.
        </p>

        <!-- AI Agent Illustration (replacing iPhone Mockup) -->
        <div class="flex justify-center mb-20">
          <div class="max-w-md mx-auto">
            <svg viewBox="0 0 400 200" class="w-full h-auto text-purple-600">
              <!-- Central AI Brain -->
              <circle cx="200" cy="100" r="60" fill="currentColor" opacity="0.1"/>
              <circle cx="200" cy="100" r="40" fill="currentColor" opacity="0.2"/>
              <circle cx="200" cy="100" r="20" fill="currentColor" opacity="0.3"/>
              
              <!-- Connected nodes -->
              <circle cx="120" cy="60" r="15" fill="currentColor" opacity="0.4"/>
              <circle cx="280" cy="60" r="15" fill="currentColor" opacity="0.4"/>
              <circle cx="120" cy="140" r="15" fill="currentColor" opacity="0.4"/>
              <circle cx="280" cy="140" r="15" fill="currentColor" opacity="0.4"/>
              
              <!-- Connection lines -->
              <line x1="200" y1="100" x2="120" y2="60" stroke="currentColor" stroke-width="2" opacity="0.3"/>
              <line x1="200" y1="100" x2="280" y2="60" stroke="currentColor" stroke-width="2" opacity="0.3"/>
              <line x1="200" y1="100" x2="120" y2="140" stroke="currentColor" stroke-width="2" opacity="0.3"/>
              <line x1="200" y1="100" x2="280" y2="140" stroke="currentColor" stroke-width="2" opacity="0.3"/>
            </svg>
          </div>
        </div>

        <!-- Feature Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
          <!-- Automation -->
          <div class="bg-blue-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Automated Workflows</h3>
            <p class="text-gray-600 leading-relaxed">Streamline tasks and processes with intelligent agents</p>
          </div>

          <!-- Optimization -->
          <div class="bg-green-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Performance Optimization</h3>
            <p class="text-gray-600 leading-relaxed">AI-driven insights for continuous improvement</p>
          </div>

          <!-- Scalability -->
          <div class="bg-purple-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m-9 4a2 2 0 11-4 0 2 2 0 014 0zm-2 4a2 2 0 100 4 2 2 0 000-4z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Scalable Solutions</h3>
            <p class="text-gray-600 leading-relaxed">Adapt and grow with your business needs</p>
          </div>

          <!-- Data Analysis -->
          <div class="bg-yellow-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Actionable Insights</h3>
            <p class="text-gray-600 leading-relaxed">Transform raw data into strategic business decisions</p>
          </div>

          <!-- Cost Efficiency -->
          <div class="bg-indigo-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Cost Efficiency</h3>
            <p class="text-gray-600 leading-relaxed">Reduce operational costs through automation</p>
          </div>

          <!-- 24/7 Availability -->
          <div class="bg-red-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">24/7 Operations</h3>
            <p class="text-gray-600 leading-relaxed">Continuous monitoring and task execution</p>
          </div>
        </div>
      </section>

      <!-- How it Works - Ultra Minimal -->
      <section class="py-20 border-t border-gray-100">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            How AI Agents Work
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-3">&#128065;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Observe</h3>
            <p class="text-gray-600 text-sm">Collect and process data from various sources</p>
          </div>

          <div class="text-center">
            <div class="text-4xl mb-3">&#129302;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Analyze</h3>
            <p class="text-gray-600 text-sm">Identify patterns and make informed decisions</p>
          </div>

          <div class="text-center">
            <div class="text-4xl mb-3">&#9889;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Act</h3>
            <p class="text-gray-600 text-sm">Execute tasks and automate processes</p>
          </div>

          <div class="text-center">
            <div class="text-4xl mb-3">&#128200;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Learn & Improve</h3>
            <p class="text-gray-600 text-sm">Continuously optimize performance over time</p>
          </div>
        </div>
      </section>

      <!-- Why Choose Our AI Platform - Modern Unified Section -->
      <section class="py-20 bg-gradient-to-br from-gray-50 to-white relative overflow-hidden border-t border-gray-100">
        <div class="max-w-6xl mx-auto px-6 lg:px-8">
          <!-- Floating Background Elements -->
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-10 left-10 w-3 h-3 bg-purple-200 rounded-full opacity-40 animate-pulse"></div>
            <div class="absolute top-32 right-16 w-2 h-2 bg-blue-200 rounded-full opacity-30 animate-pulse" style="animation-delay: 1.5s;"></div>
            <div class="absolute bottom-20 left-1/4 w-2.5 h-2.5 bg-yellow-200 rounded-full opacity-35 animate-pulse" style="animation-delay: 0.8s;"></div>
          </div>

          <!-- Section Header -->
          <div class="text-center mb-16 relative z-10">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
              Why choose our
              <span class="text-purple-600">AI Agents Platform</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Empower your business with intelligent, autonomous AI solutions
            </p>
          </div>

          <!-- Unified Content Grid -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center relative z-10">
            <!-- Left: Features List -->
            <div class="space-y-8">
              <!-- Feature 1 -->
              <div class="group flex items-start gap-4 p-6 rounded-xl hover:bg-white hover:shadow-md transition-all duration-300">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-500 group-hover:scale-110 transition-all duration-300">
                  <span class="text-xl group-hover:text-white">&#129302;</span>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors duration-300">
                    Intelligent Automation
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    Automate complex tasks and decision-making processes
                  </p>
                </div>
              </div>

              <!-- Feature 2 -->
              <div class="group flex items-start gap-4 p-6 rounded-xl hover:bg-white hover:shadow-md transition-all duration-300">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-500 group-hover:scale-110 transition-all duration-300">
                  <span class="text-xl group-hover:text-white">&#128200;</span>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-300">
                    Predictive Analytics
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    Gain foresight with AI-powered trend analysis and forecasting
                  </p>
                </div>
              </div>

              <!-- Feature 3 -->
              <div class="group flex items-start gap-4 p-6 rounded-xl hover:bg-white hover:shadow-md transition-all duration-300">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-500 group-hover:scale-110 transition-all duration-300">
                  <span class="text-xl group-hover:text-white">&#128640;</span>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-green-600 transition-colors duration-300">
                    Scalable Growth
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    Seamlessly scale operations to match your business expansion
                  </p>
                </div>
              </div>

              <!-- Feature 4 -->
              <div class="group flex items-start gap-4 p-6 rounded-xl hover:bg-white hover:shadow-md transition-all duration-300">
                <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center group-hover:bg-orange-500 group-hover:scale-110 transition-all duration-300">
                  <span class="text-xl group-hover:text-white">&#9881;</span>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-orange-600 transition-colors duration-300">
                    Continuous Optimization
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    AI agents constantly learn and improve performance
                  </p>
                </div>
              </div>
            </div>

            <!-- Right: Stats & Visual -->
            <div class="space-y-8">
              <!-- Stats Grid -->
              <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
                <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">AI Agent Performance</h3>
                <div class="grid grid-cols-2 gap-6">
                  <div class="text-center group">
                    <div class="text-3xl font-bold text-purple-600 mb-2 group-hover:scale-110 transition-transform duration-300">
                      99%
                    </div>
                    <p class="text-gray-600 text-sm">Automation Rate</p>
                  </div>
                  <div class="text-center group">
                    <div class="text-3xl font-bold text-blue-600 mb-2 group-hover:scale-110 transition-transform duration-300">
                      24/7
                    </div>
                    <p class="text-gray-600 text-sm">Uptime</p>
                  </div>
                  <div class="text-center group">
                    <div class="text-3xl font-bold text-green-600 mb-2 group-hover:scale-110 transition-transform duration-300">
                      30%
                    </div>
                    <p class="text-gray-600 text-sm">Cost Reduction</p>
                  </div>
                  <div class="text-center group">
                    <div class="text-3xl font-bold text-orange-600 mb-2 group-hover:scale-110 transition-transform duration-300">
                      95%
                    </div>
                    <p class="text-gray-600 text-sm">Accuracy</p>
                  </div>
                </div>
              </div>

              <!-- Visual Element -->
              <div class="bg-gradient-to-br from-purple-50 to-blue-50 rounded-2xl p-8 text-center">
                <div class="text-6xl mb-4">&#129302;</div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Ready to transform your business?</h3>
                <p class="text-gray-600 mb-6">Unleash the power of AI Agents today</p>
                <button class="bg-purple-600 hover:bg-purple-700 text-white px-8 py-3 rounded-lg font-medium transition-colors duration-300 hover:scale-105 transform">
                  Activate AI Agents
                </button>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
  <FooterTarOS />
</Layout>