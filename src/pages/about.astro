---
import Layout from '../layouts/Layout.astro';
import HeaderTarOS from '../components/HeaderTarOS.astro';
import FooterTarOS from '../components/FooterTarOS.astro';
---

<Layout title="About - Tar">
  <HeaderTarOS />
  <main class="pt-24 pb-20 bg-white">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-20">
        <div class="text-8xl mb-6">&#127775;</div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          About Tar
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Everything app. One platform for all your needs.
        </p>
      </div>

      <!-- Mission -->
      <div class="text-center mb-20">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Our Mission</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto leading-relaxed">
          We believe technology should simplify life, not complicate it. Tar brings together commerce, delivery, rides, tasks, and chat into one seamless experience.
        </p>
      </div>

      <!-- Values -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
        <div class="text-center p-6">
          <div class="text-5xl mb-4">&#9889;</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Simple</h3>
          <p class="text-gray-600 text-sm">Easy to use, powerful results</p>
        </div>

        <div class="text-center p-6">
          <div class="text-5xl mb-4">&#128640;</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Fast</h3>
          <p class="text-gray-600 text-sm">Quick setup, instant results</p>
        </div>

        <div class="text-center p-6">
          <div class="text-5xl mb-4">&#128737;</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Secure</h3>
          <p class="text-gray-600 text-sm">Your data is safe with us</p>
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center bg-gray-50 rounded-2xl p-12">
        <div class="text-6xl mb-4">&#128075;</div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Join us</h2>
        <p class="text-gray-600 mb-8">Start your journey with Tar today</p>
        <button class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-xl font-medium transition-colors">
          Get Started
        </button>
      </div>
    </div>
  </main>
  <FooterTarOS />
</Layout>