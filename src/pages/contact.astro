---
import Layout from '../layouts/Layout.astro';
import HeaderTarOS from '../components/HeaderTarOS.astro';
import FooterTarOS from '../components/FooterTarOS.astro';
---

<Layout title="Contact - Tar">
  <HeaderTarOS />
  <main class="pt-24 pb-20 bg-white">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-20">
        <div class="text-8xl mb-6">&#128172;</div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Contact Us
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Get in touch. We're here to help.
        </p>
      </div>

      <!-- Contact Methods -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
        <div class="text-center p-6">
          <div class="text-5xl mb-4">&#128231;</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Email</h3>
          <p class="text-gray-600 text-sm">hello@tar.app</p>
        </div>

        <div class="text-center p-6">
          <div class="text-5xl mb-4">&#128172;</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Chat</h3>
          <p class="text-gray-600 text-sm">Live chat support</p>
        </div>

        <div class="text-center p-6">
          <div class="text-5xl mb-4">&#128214;</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Help</h3>
          <p class="text-gray-600 text-sm">Documentation & guides</p>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="max-w-2xl mx-auto">
        <div class="bg-gray-50 rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Send us a message</h2>
          <form class="space-y-6">
            <div>
              <input type="text" placeholder="Your name" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <div>
              <input type="email" placeholder="Your email" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <div>
              <textarea rows="5" placeholder="Your message" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"></textarea>
            </div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-xl font-medium transition-colors">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
  <FooterTarOS />
</Layout>