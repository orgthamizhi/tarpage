---
import Layout from '../layouts/Layout.astro';
import HeaderTarOS from '../components/HeaderTarOS.astro';
import FooterTarOS from '../components/FooterTarOS.astro';
---

<Layout title="Help - Tar">
  <HeaderTarOS />
  <main class="pt-24 pb-20 bg-white">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-20">
        <div class="text-8xl mb-6">&#128214;</div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Help Center
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Find answers and get support.
        </p>
      </div>

      <!-- Help Categories -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
        <div class="text-center p-6">
          <div class="text-5xl mb-4">&#128640;</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Getting Started</h3>
          <p class="text-gray-600 text-sm">Setup guides and tutorials</p>
        </div>

        <div class="text-center p-6">
          <div class="text-5xl mb-4">&#128187;</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">API Docs</h3>
          <p class="text-gray-600 text-sm">Developer documentation</p>
        </div>

        <div class="text-center p-6">
          <div class="text-5xl mb-4">&#128172;</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Support</h3>
          <p class="text-gray-600 text-sm">Contact our support team</p>
        </div>
      </div>

      <!-- FAQ -->
      <div class="max-w-3xl mx-auto mb-20">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
        <div class="space-y-6">
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="font-semibold text-gray-900 mb-2">How do I get started?</h3>
            <p class="text-gray-600 text-sm">Sign up for a free account and follow our setup guide.</p>
          </div>
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="font-semibold text-gray-900 mb-2">Is there a free plan?</h3>
            <p class="text-gray-600 text-sm">Yes, we offer a free plan with basic features.</p>
          </div>
          <div class="bg-gray-50 rounded-xl p-6">
            <h3 class="font-semibold text-gray-900 mb-2">How can I contact support?</h3>
            <p class="text-gray-600 text-sm">Use our contact form or email hello@tar.app</p>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center bg-gray-50 rounded-2xl p-12">
        <div class="text-6xl mb-4">&#128172;</div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Need more help?</h2>
        <p class="text-gray-600 mb-8">Our support team is here to help</p>
        <button class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-xl font-medium transition-colors">
          Contact Support
        </button>
      </div>
    </div>
  </main>
  <FooterTarOS />
</Layout>