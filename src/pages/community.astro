    description: "Get answers from Tar OS experts and experienced business owners.",
    icon: "üéØ",
    color: "semantic-blue"
  },
  {
    title: "Success Stories",
    description: "Learn from real businesses and their journey with Tar OS.",
    icon: "üèÜ",
    color: "semantic-orange"
  },
  {
    title: "Feature Requests",
    description: "Suggest new features and vote on what matters most to your business.",
    icon: "üí°",
    color: "semantic-purple"
  },
  {
    title: "Local Meetups",
    description: "Join local Tar OS user groups and networking events in your area.",
    icon: "üìç",
    color: "semantic-teal"
  },
  {
    title: "Beta Testing",
    description: "Get early access to new features and help shape the future of Tar OS.",
    icon: "üöÄ",
    color: "semantic-pink"
  }
];

const communityStats = [
  { number: "50K+", label: "Active Members" },
  { number: "1M+", label: "Posts & Discussions" },
  { number: "500+", label: "Local Meetups" },
  { number: "95%", label: "Questions Answered" }
