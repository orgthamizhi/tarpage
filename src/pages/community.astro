const recentTopics = [
  {
    title: "Best practices for inventory management in retail",
    author: "Sarah Chen",
    replies: 23,
    category: "Retail",
    time: "2 hours ago"
  },
  {
    title: "How to set up loyalty programs for restaurants",
    author: "Mike Rodriguez",
