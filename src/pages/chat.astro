---
import Layout from '../layouts/Layout.astro';
import HeaderTarOS from '../components/HeaderTarOS.astro';
import FooterTarOS from '../components/FooterTarOS.astro';
---

<Layout title="Chat - Tar">
  <HeaderTarOS />
  <main class="pt-24 pb-20 bg-white">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-20">
        <div class="text-8xl mb-6">&#128172;</div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Chat
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Connect with teams. Real-time messaging.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
        <!-- Messaging -->
        <div class="bg-red-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Messaging</h3>
          <p class="text-gray-600 leading-relaxed">Instant team communication</p>
        </div>

        <!-- Channels -->
        <div class="bg-blue-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10m-9 0a2 2 0 00-2 2v14a2 2 0 002 2h8a2 2 0 002-2V6a2 2 0 00-2-2M9 12h6m-6 4h6"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Channels</h3>
          <p class="text-gray-600 leading-relaxed">Organized conversations</p>
        </div>

        <!-- Files -->
        <div class="bg-green-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Files</h3>
          <p class="text-gray-600 leading-relaxed">Share files instantly</p>
        </div>

        <!-- Video -->
        <div class="bg-purple-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Video</h3>
          <p class="text-gray-600 leading-relaxed">Video calls and meetings</p>
        </div>

        <!-- Search -->
        <div class="bg-yellow-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Search</h3>
          <p class="text-gray-600 leading-relaxed">Find messages quickly</p>
        </div>

        <!-- Mobile -->
        <div class="bg-indigo-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Mobile</h3>
          <p class="text-gray-600 leading-relaxed">Chat on any device</p>
        </div>
      </div>

      <!-- Chat Features -->
      <div class="text-center mb-20">
        <h2 class="text-2xl font-bold text-gray-900 mb-12">Stay connected</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-3">&#128172;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Direct</h3>
            <p class="text-gray-600 text-sm">One-on-one chats</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-3">&#128101;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Groups</h3>
            <p class="text-gray-600 text-sm">Team conversations</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-3">&#128227;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Channels</h3>
            <p class="text-gray-600 text-sm">Topic-based chat</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-3">&#128226;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Broadcast</h3>
            <p class="text-gray-600 text-sm">Company updates</p>
          </div>
        </div>
      </div>

      <!-- Chat Features -->
      <div class="mb-20">
        <h2 class="text-2xl font-bold text-gray-900 text-center mb-12">Advanced communication tools</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white border border-gray-200 rounded-2xl p-6">
            <div class="text-3xl mb-4">&#9889;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Instant Messaging</h3>
            <p class="text-gray-600 text-sm">Real-time messaging with read receipts and typing indicators.</p>
          </div>
          <div class="bg-white border border-gray-200 rounded-2xl p-6">
            <div class="text-3xl mb-4">&#128206;</div>
            <h3 class="font-semibold text-gray-900 mb-2">File Sharing</h3>
            <p class="text-gray-600 text-sm">Share documents, images, and files up to 100MB instantly.</p>
          </div>
          <div class="bg-white border border-gray-200 rounded-2xl p-6">
            <div class="text-3xl mb-4">&#128249;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Video Calls</h3>
            <p class="text-gray-600 text-sm">HD video calls with screen sharing and recording capabilities.</p>
          </div>
          <div class="bg-white border border-gray-200 rounded-2xl p-6">
            <div class="text-3xl mb-4">&#128269;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Smart Search</h3>
            <p class="text-gray-600 text-sm">Find any message, file, or conversation with powerful search.</p>
          </div>
        </div>
      </div>

      <!-- Team Productivity -->
      <div class="mb-20">
        <h2 class="text-2xl font-bold text-gray-900 text-center mb-12">Boost team productivity</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-4">&#128172;</div>
            <h3 class="font-semibold text-gray-900 mb-2">50% Less Email</h3>
            <p class="text-gray-600 text-sm">Reduce email clutter with organized chat channels</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-4">&#9200;</div>
            <h3 class="font-semibold text-gray-900 mb-2">3x Faster Decisions</h3>
            <p class="text-gray-600 text-sm">Make decisions faster with real-time communication</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-4">&#128101;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Better Collaboration</h3>
            <p class="text-gray-600 text-sm">Improve team coordination and project outcomes</p>
          </div>
        </div>
      </div>

      <!-- Simple Illustration -->
      <div class="text-center mb-20">
        <div class="max-w-md mx-auto">
          <svg viewBox="0 0 400 200" class="w-full h-auto text-red-600">
            <!-- Chat bubbles illustration -->
            <ellipse cx="120" cy="80" rx="60" ry="25" fill="currentColor" opacity="0.2"/>
            <ellipse cx="280" cy="120" rx="60" ry="25" fill="currentColor" opacity="0.3"/>
            <ellipse cx="150" cy="140" rx="50" ry="20" fill="currentColor" opacity="0.2"/>
            
            <!-- Chat dots -->
            <circle cx="120" cy="80" r="3" fill="currentColor" opacity="0.6"/>
            <circle cx="130" cy="80" r="3" fill="currentColor" opacity="0.6"/>
            <circle cx="140" cy="80" r="3" fill="currentColor" opacity="0.6"/>
          </svg>
        </div>
        <p class="text-gray-500 text-sm mt-4">Real-time conversations</p>
      </div>

      <!-- CTA -->
      <div class="text-center bg-gray-50 rounded-2xl p-12">
        <div class="text-6xl mb-4">&#128172;</div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Start chatting</h2>
        <p class="text-gray-600 mb-8">Connect your team today</p>
        <button class="bg-red-600 hover:bg-red-700 text-white px-8 py-3 rounded-xl font-medium transition-colors">
          Get Started
        </button>
      </div>
    </div>
  </main>
  <FooterTarOS />
</Layout>