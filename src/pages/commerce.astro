---
import Layout from '../layouts/Layout.astro';
import HeaderTarOS from '../components/HeaderTarOS.astro';
import FooterTarOS from '../components/FooterTarOS.astro';
---

<Layout title="Commerce - Tar">
  <HeaderTarOS />
  <main class="pt-24 pb-20 bg-white">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-20">
        <div class="text-8xl mb-6">&#128722;</div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Commerce
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Sell anything, anywhere. Simple store setup.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
        <!-- Products -->
        <div class="bg-blue-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Products</h3>
          <p class="text-gray-600 leading-relaxed">Add products, photos, prices</p>
        </div>

        <!-- Payments -->
        <div class="bg-green-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Payments</h3>
          <p class="text-gray-600 leading-relaxed">Accept cards, digital wallets</p>
        </div>

        <!-- Orders -->
        <div class="bg-purple-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Orders</h3>
          <p class="text-gray-600 leading-relaxed">Track orders, manage returns</p>
        </div>

        <!-- Analytics -->
        <div class="bg-yellow-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Analytics</h3>
          <p class="text-gray-600 leading-relaxed">Sales reports, insights</p>
        </div>

        <!-- Inventory -->
        <div class="bg-indigo-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Inventory</h3>
          <p class="text-gray-600 leading-relaxed">Stock tracking, alerts</p>
        </div>

        <!-- Multi-Channel -->
        <div class="bg-red-50 p-8 rounded-lg border border-gray-100">
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9 3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Everywhere</h3>
          <p class="text-gray-600 leading-relaxed">Web, mobile, social</p>
        </div>
      </div>

      <!-- How Commerce Works -->
      <div class="text-center mb-20">
        <h2 class="text-2xl font-bold text-gray-900 mb-12">How it works</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-3">&#128230;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Add Products</h3>
            <p class="text-gray-600 text-sm">Upload products with photos and details</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-3">&#128179;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Set Pricing</h3>
            <p class="text-gray-600 text-sm">Configure prices and payment methods</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-3">&#128722;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Receive Orders</h3>
            <p class="text-gray-600 text-sm">Customers place orders online</p>
          </div>
          <div class="text-center">
            <div class="text-4xl mb-3">&#128666;</div>
            <h3 class="font-semibold text-gray-900 mb-1">Fulfill & Ship</h3>
            <p class="text-gray-600 text-sm">Process and deliver orders</p>
          </div>
        </div>
      </div>

      <!-- Why Choose Our Commerce Platform - Modern Minimal -->
      <section class="py-32 bg-white relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <!-- Floating Background Elements -->
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-20 left-10 w-2 h-2 bg-blue-400 rounded-full opacity-60 animate-pulse"></div>
            <div class="absolute top-40 right-20 w-1 h-1 bg-purple-400 rounded-full opacity-40 animate-pulse" style="animation-delay: 1s;"></div>
            <div class="absolute bottom-32 left-1/4 w-1.5 h-1.5 bg-green-400 rounded-full opacity-50 animate-pulse" style="animation-delay: 2s;"></div>
            <div class="absolute bottom-20 right-1/3 w-1 h-1 bg-pink-400 rounded-full opacity-60 animate-pulse" style="animation-delay: 0.5s;"></div>
          </div>

          <!-- Section Header -->
          <div class="text-center mb-24">
            <h2 class="text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 mb-8 leading-[0.9] tracking-tight">
              Why choose our
              <br />
              <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">commerce platform</span>
            </h2>
            <p class="text-xl md:text-2xl text-gray-500 max-w-4xl mx-auto leading-relaxed font-light">
              Built for modern businesses that demand simplicity, power, and growth
            </p>
          </div>

          <!-- Animated Features List -->
          <div class="max-w-4xl mx-auto space-y-16">
            <!-- Feature 1 -->
            <div class="group flex items-center justify-between py-8 border-b border-gray-100 hover:border-gray-200 transition-all duration-500">
              <div class="flex-1">
                <h3 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-300">
                  Setup in minutes, not days
                </h3>
                <p class="text-lg text-gray-600 leading-relaxed max-w-2xl">
                  No coding required. Add products, configure payments, and launch your store with our intuitive interface.
                </p>
              </div>
              <div class="ml-8 opacity-60 group-hover:opacity-100 group-hover:scale-110 transition-all duration-300">
                <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-400 rounded-2xl flex items-center justify-center">
                  <span class="text-2xl">&#9889;</span>
                </div>
              </div>
            </div>

            <!-- Feature 2 -->
            <div class="group flex items-center justify-between py-8 border-b border-gray-100 hover:border-gray-200 transition-all duration-500">
              <div class="flex-1">
                <h3 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-3 group-hover:text-purple-600 transition-colors duration-300">
                  Scale without limits
                </h3>
                <p class="text-lg text-gray-600 leading-relaxed max-w-2xl">
                  From startup to enterprise. Handle millions of products and customers with enterprise-grade infrastructure.
                </p>
              </div>
              <div class="ml-8 opacity-60 group-hover:opacity-100 group-hover:scale-110 transition-all duration-300">
                <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-400 rounded-2xl flex items-center justify-center">
                  <span class="text-2xl">&#128640;</span>
                </div>
              </div>
            </div>

            <!-- Feature 3 -->
            <div class="group flex items-center justify-between py-8 border-b border-gray-100 hover:border-gray-200 transition-all duration-500">
              <div class="flex-1">
                <h3 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-3 group-hover:text-green-600 transition-colors duration-300">
                  Global by default
                </h3>
                <p class="text-lg text-gray-600 leading-relaxed max-w-2xl">
                  Accept payments in 100+ currencies. Multi-language support. Optimized for international commerce.
                </p>
              </div>
              <div class="ml-8 opacity-60 group-hover:opacity-100 group-hover:scale-110 transition-all duration-300">
                <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-400 rounded-2xl flex items-center justify-center">
                  <span class="text-2xl">&#127758;</span>
                </div>
              </div>
            </div>

            <!-- Feature 4 -->
            <div class="group flex items-center justify-between py-8">
              <div class="flex-1">
                <h3 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-3 group-hover:text-orange-600 transition-colors duration-300">
                  AI-powered insights
                </h3>
                <p class="text-lg text-gray-600 leading-relaxed max-w-2xl">
                  Smart analytics that predict trends, optimize pricing, and help you make data-driven decisions.
                </p>
              </div>
              <div class="ml-8 opacity-60 group-hover:opacity-100 group-hover:scale-110 transition-all duration-300">
                <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-400 rounded-2xl flex items-center justify-center">
                  <span class="text-2xl">&#129504;</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Stats Section -->
          <div class="mt-32 grid grid-cols-1 md:grid-cols-3 gap-12 text-center">
            <div class="group">
              <div class="text-4xl md:text-5xl font-bold text-gray-900 mb-2 group-hover:scale-105 transition-transform duration-300">
                <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">99.9%</span>
              </div>
              <p class="text-lg text-gray-600">Uptime guarantee</p>
            </div>
            <div class="group">
              <div class="text-4xl md:text-5xl font-bold text-gray-900 mb-2 group-hover:scale-105 transition-transform duration-300">
                <span class="bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">&lt;2s</span>
              </div>
              <p class="text-lg text-gray-600">Average load time</p>
            </div>
            <div class="group">
              <div class="text-4xl md:text-5xl font-bold text-gray-900 mb-2 group-hover:scale-105 transition-transform duration-300">
                <span class="bg-gradient-to-r from-green-600 to-blue-600 bg-clip-text text-transparent">24/7</span>
              </div>
              <p class="text-lg text-gray-600">Expert support</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Simple Illustration -->
      <div class="text-center mb-20">
        <div class="max-w-md mx-auto">
          <svg viewBox="0 0 400 200" class="w-full h-auto text-blue-600">
            <!-- Simple store illustration -->
            <rect x="50" y="80" width="300" height="100" rx="10" fill="currentColor" opacity="0.1"/>
            <rect x="70" y="100" width="60" height="60" rx="5" fill="currentColor" opacity="0.2"/>
            <rect x="150" y="100" width="60" height="60" rx="5" fill="currentColor" opacity="0.2"/>
            <rect x="230" y="100" width="60" height="60" rx="5" fill="currentColor" opacity="0.2"/>
            <rect x="310" y="100" width="60" height="60" rx="5" fill="currentColor" opacity="0.2"/>
            
            <!-- Shopping cart -->
            <circle cx="320" cy="50" r="20" fill="currentColor" opacity="0.3"/>
            <text x="320" y="55" text-anchor="middle" class="text-xs fill-white">&#128722;</text>
          </svg>
        </div>
        <p class="text-gray-500 text-sm mt-4">Everything you need to sell online</p>
      </div>

      <!-- CTA -->
      <div class="text-center bg-gray-50 rounded-2xl p-12">
        <div class="text-6xl mb-4">&#128640;</div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Start selling</h2>
        <p class="text-gray-600 mb-8">Set up your store in minutes</p>
        <button class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-xl font-medium transition-colors">
          Get Started
        </button>
      </div>
    </div>
  </main>
  <FooterTarOS />
</Layout>