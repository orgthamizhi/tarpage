---
import Layout from '../layouts/Layout.astro';
import HeaderTarOS from '../components/HeaderTarOS.astro';
import FooterTarOS from '../components/FooterTarOS.astro';
---

<Layout title="Delivery - Tar">
  <HeaderTarOS />
  <main class="pt-24 pb-20 bg-white">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <!-- Hero Section - Ultra Minimal -->
      <section class="py-20 text-center">
        <div class="text-8xl mb-6">&#128666;</div>
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Delivery
        </h1>
        <p class="text-xl text-gray-600 mb-16 max-w-2xl mx-auto">
          Fast delivery, anywhere. Track in real-time.
        </p>

        <!-- iPhone Mockup -->
        <div class="flex justify-center mb-20">
          <div class="relative w-64 h-[520px]">
            <div class="absolute inset-0 bg-black rounded-[3rem] p-2">
              <div class="w-full h-full bg-white rounded-[2.5rem] overflow-hidden">
                <div class="p-6 h-full flex flex-col">
                  <!-- Status Bar -->
                  <div class="flex justify-between items-center mb-6 text-xs">
                    <span>9:41</span>
                    <div class="flex gap-1">
                      <div class="w-4 h-2 bg-gray-300 rounded-sm"></div>
                      <div class="w-6 h-2 bg-green-500 rounded-sm"></div>
                    </div>
                  </div>
                  
                  <!-- App Content -->
                  <div class="flex-1">
                    <h2 class="text-lg font-semibold mb-4">Track Order</h2>
                    
                    <!-- Delivery Status -->
                    <div class="space-y-4">
                      <div class="flex items-center gap-3">
                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                        <div class="text-sm">Order confirmed</div>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                        <div class="text-sm">Preparing food</div>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                        <div class="text-sm font-medium">Driver on the way</div>
                      </div>
                      <div class="flex items-center gap-3">
                        <div class="w-3 h-3 bg-gray-300 rounded-full"></div>
                        <div class="text-sm text-gray-500">Delivered</div>
                      </div>
                    </div>
                    
                    <!-- Map Area -->
                    <div class="mt-6 bg-gray-100 rounded-lg h-32 flex items-center justify-center">
                      <div class="text-gray-500 text-sm">Live Map</div>
                    </div>
                    
                    <!-- ETA -->
                    <div class="mt-4 text-center">
                      <div class="text-lg font-semibold">12 mins</div>
                      <div class="text-xs text-gray-500">Estimated arrival</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Feature Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
          <!-- Real-time Tracking -->
          <div class="bg-blue-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Real-time Tracking</h3>
            <p class="text-gray-600 leading-relaxed">Follow your order from pickup to delivery</p>
          </div>

          <!-- Smart Routing -->
          <div class="bg-green-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Smart Routing</h3>
            <p class="text-gray-600 leading-relaxed">AI-powered fastest route optimization</p>
          </div>

          <!-- Driver Network -->
          <div class="bg-purple-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Reliable Network</h3>
            <p class="text-gray-600 leading-relaxed">Verified drivers, safe delivery</p>
          </div>

          <!-- Fleet Management -->
          <div class="bg-yellow-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Fleet Management</h3>
            <p class="text-gray-600 leading-relaxed">Manage vehicles and schedules</p>
          </div>

          <!-- Analytics -->
          <div class="bg-indigo-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">Analytics</h3>
            <p class="text-gray-600 leading-relaxed">Delivery insights and reports</p>
          </div>

          <!-- Customer Support -->
          <div class="bg-red-50 p-8 rounded-lg border border-gray-100">
            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">24/7 Support</h3>
            <p class="text-gray-600 leading-relaxed">Round-the-clock assistance</p>
          </div>
        </div>
      </section>

      <!-- How it Works - Ultra Minimal -->
      <section class="py-20 border-t border-gray-100">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            How it works
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-3">&#128179;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Order Placed</h3>
            <p class="text-gray-600 text-sm">Customer places order online</p>
          </div>

          <div class="text-center">
            <div class="text-4xl mb-3">&#128666;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Driver Assigned</h3>
            <p class="text-gray-600 text-sm">Nearest driver gets the order</p>
          </div>

          <div class="text-center">
            <div class="text-4xl mb-3">&#128663;</div>
            <h3 class="font-semibold text-gray-900 mb-2">On the Way</h3>
            <p class="text-gray-600 text-sm">Real-time tracking updates</p>
          </div>

          <div class="text-center">
            <div class="text-4xl mb-3">&#127968;</div>
            <h3 class="font-semibold text-gray-900 mb-2">Delivered</h3>
            <p class="text-gray-600 text-sm">Safe delivery to customer</p>
          </div>
        </div>
      </section>

      <!-- Why Choose Our Delivery Platform - Modern Unified Section -->
      <section class="py-20 bg-gradient-to-br from-gray-50 to-white relative overflow-hidden border-t border-gray-100">
        <div class="max-w-6xl mx-auto px-6 lg:px-8">
          <!-- Floating Background Elements -->
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-10 left-10 w-3 h-3 bg-blue-200 rounded-full opacity-40 animate-pulse"></div>
            <div class="absolute top-32 right-16 w-2 h-2 bg-purple-200 rounded-full opacity-30 animate-pulse" style="animation-delay: 1.5s;"></div>
            <div class="absolute bottom-20 left-1/4 w-2.5 h-2.5 bg-green-200 rounded-full opacity-35 animate-pulse" style="animation-delay: 0.8s;"></div>
          </div>

          <!-- Section Header -->
          <div class="text-center mb-16 relative z-10">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
              Why choose our
              <span class="text-blue-600">delivery platform</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Everything you need for fast, reliable delivery in one modern platform
            </p>
          </div>

          <!-- Unified Content Grid -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center relative z-10">
            <!-- Left: Features List -->
            <div class="space-y-8">
              <!-- Feature 1 -->
              <div class="group flex items-start gap-4 p-6 rounded-xl hover:bg-white hover:shadow-md transition-all duration-300">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-500 group-hover:scale-110 transition-all duration-300">
                  <span class="text-xl group-hover:text-white">&#9889;</span>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-300">
                    Lightning fast delivery
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    Average delivery time under 30 minutes with smart routing algorithms
                  </p>
                </div>
              </div>

              <!-- Feature 2 -->
              <div class="group flex items-start gap-4 p-6 rounded-xl hover:bg-white hover:shadow-md transition-all duration-300">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-500 group-hover:scale-110 transition-all duration-300">
                  <span class="text-xl group-hover:text-white">&#127758;</span>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-green-600 transition-colors duration-300">
                    Nationwide coverage
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    Extensive network of drivers and distribution centers for maximum reach
                  </p>
                </div>
              </div>

              <!-- Feature 3 -->
              <div class="group flex items-start gap-4 p-6 rounded-xl hover:bg-white hover:shadow-md transition-all duration-300">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-500 group-hover:scale-110 transition-all duration-300">
                  <span class="text-xl group-hover:text-white">&#128248;</span>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors duration-300">
                    Real-time tracking
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    GPS tracking, delivery photos, and instant notifications keep everyone informed
                  </p>
                </div>
              </div>

              <!-- Feature 4 -->
              <div class="group flex items-start gap-4 p-6 rounded-xl hover:bg-white hover:shadow-md transition-all duration-300">
                <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center group-hover:bg-orange-500 group-hover:scale-110 transition-all duration-300">
                  <span class="text-xl group-hover:text-white">&#129504;</span>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-orange-600 transition-colors duration-300">
                    Smart logistics
                  </h3>
                  <p class="text-gray-600 leading-relaxed">
                    AI-powered route optimization and automated dispatch for maximum efficiency
                  </p>
                </div>
              </div>
            </div>

            <!-- Right: Stats & Visual -->
            <div class="space-y-8">
              <!-- Stats Grid -->
              <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
                <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">Platform Performance</h3>
                <div class="grid grid-cols-2 gap-6">
                  <div class="text-center group">
                    <div class="text-3xl font-bold text-blue-600 mb-2 group-hover:scale-110 transition-transform duration-300">
                      15min
                    </div>
                    <p class="text-gray-600 text-sm">Avg pickup</p>
                  </div>
                  <div class="text-center group">
                    <div class="text-3xl font-bold text-green-600 mb-2 group-hover:scale-110 transition-transform duration-300">
                      25min
                    </div>
                    <p class="text-gray-600 text-sm">Avg delivery</p>
                  </div>
                  <div class="text-center group">
                    <div class="text-3xl font-bold text-purple-600 mb-2 group-hover:scale-110 transition-transform duration-300">
                      24/7
                    </div>
                    <p class="text-gray-600 text-sm">Support</p>
                  </div>
                  <div class="text-center group">
                    <div class="text-3xl font-bold text-orange-600 mb-2 group-hover:scale-110 transition-transform duration-300">
                      98%
                    </div>
                    <p class="text-gray-600 text-sm">Satisfaction</p>
                  </div>
                </div>
              </div>

              <!-- Visual Element -->
              <div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-2xl p-8 text-center">
                <div class="text-6xl mb-4">&#128640;</div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Ready to get started?</h3>
                <p class="text-gray-600 mb-6">Join thousands of businesses using our platform</p>
                <button class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-medium transition-colors duration-300 hover:scale-105 transform">
                  Start Delivering
                </button>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
  <FooterTarOS />
</Layout>