---
---

<section class="pt-24 pb-20 bg-white">

  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative">
    <!-- Game Control Icons: Responsive Position -->
    <div class="emoji-icons-container">
      <div class="emoji-icons-inner">
        <span class="text-3xl emoji-icon" style="--animation-delay: 0s;">üéÆ</span>
        <span class="text-3xl emoji-icon" style="--animation-delay: 0.5s;">üïπÔ∏è</span>
        <span class="text-3xl emoji-icon" style="--animation-delay: 1s;">ü§ñ</span>
        <span class="text-3xl emoji-icon" style="--animation-delay: 1.5s;">ü™ê</span>
      </div>
      <style>
        @keyframes bounce {
          0%, 100% {
            transform: translateY(0);
          }
          50% {
            transform: translateY(-10px);
          }
        }
        .emoji-icon {
          animation: bounce 2s infinite ease-in-out;
          animation-delay: var(--animation-delay);
        }
        .emoji-icons-container {
          position: absolute;
          top: 0;
          left: 0;
          width: 10rem;
          height: 8rem;
          z-index: 10;
        }
        .emoji-icons-inner {
          position: absolute;
          top: 0;
          left: 0;
          width: 10rem;
          height: 8rem;
          display: flex;
          align-items: center;
          justify-content: space-around;
        }
        @media (max-width: 1023px) {
          .emoji-icons-container {
            left: auto;
            right: 0.5rem;
            top: 3.5rem;
            width: 9.5rem;
            height: 7rem;
          }
          .emoji-icons-inner {
            left: 0;
            right: 0;
            top: 0;
            width: 100%;
            height: 100%;
            justify-content: flex-end;
            gap: 0.5rem;
          }
        }
      </style>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="text-left space-y-8">
        <!-- Main Headline -->
        <h1 class="text-gray-900 leading-[1.1] tracking-tight">
          <span class="text-5xl md:text-6xl font-bold block">Everything app.</span>
          <span class="text-2xl md:text-3xl font-light block mt-2">AI powered.</span>
        </h1>
        
        <!-- Subheading -->
        <p class="text-lg text-gray-900 leading-relaxed font-light">
          Commerce | Delivery | Rides | Tasks | Chat
        </p>

        <!-- CTA Buttons -->
        <div class="store-badges-wrapper">
          <!-- Official Google Play Badge -->
          <div class="store-badge">
            <div class="badge-img">
              <img 
                src="https://play.google.com/intl/en_us/badges/static/images/badges/en_badge_web_generic.png" 
                alt="Get it on Google Play" 
                class="badge-image badge-google"
              />
            </div>
          </div>
          <!-- Official App Store Badge (Unhighlighted) -->
          <div class="store-badge">
            <div class="badge-img">
              <img 
                src="https://tools.applemediaservices.com/api/badges/download-on-the-app-store/black/en-us?size=250x83&amp;releaseDate=1590969600&h=a4b914b28dab824baf057a0d2c8cbb5f" 
                alt="Download on the App Store" 
                class="badge-image badge-apple opacity-40"
              />
            </div>
          </div>
          <style>
            .store-badges-wrapper {
              display: flex;
              flex-direction: row;
              gap: 2rem;
              width: 100%;
              max-width: 520px;
              padding-top: 2rem;
              align-items: center;
              justify-content: flex-start;
              margin-left: 0;
              margin-right: 0;
            }
            .store-badge {
              display: flex;
              flex-direction: column;
              align-items: center;
              justify-content: center;
              max-width: 200px;
              flex: 1 1 0;
            }
            .badge-img {
              width: 180px;
              height: 60px;
              min-height: 60px;
              display: flex;
              align-items: center;
              justify-content: center;
              background: #fff;
              border-radius: 0.75rem;
              overflow: hidden;
            }
            .badge-image {
              width: 100%;
              height: 100%;
              min-width: 0;
              min-height: 0;
              object-fit: contain;
              box-shadow: 0 2px 8px 0 rgba(0,0,0,0.08);
              display: block;
            }
            .badge-google,
            .badge-apple {
              width: 100%;
              height: 100%;
              min-width: 0;
              min-height: 0;
              object-fit: contain;
              display: block;
            }
            .coming-soon {
              margin-top: 0.4rem;
              color: #6b7280;
              font-size: 1rem;
              font-weight: 600;
              letter-spacing: 0.04em;
            }
            @media (max-width: 1023px) {
              .store-badges-wrapper {
                justify-content: center;
                margin-left: auto;
                margin-right: auto;
              }
            }
            @media (max-width: 640px) {
              .store-badges-wrapper {
                gap: 0.5rem;
                max-width: 100vw;
                justify-content: center;
                padding-top: 1.2rem;
              }
              .store-badge {
                max-width: 140px;
              }
              .badge-img {
                width: 120px;
                height: 38px;
                min-height: 38px;
                border-radius: 0.5rem;
                overflow: hidden;
              }
              .badge-image,
              .badge-google,
              .badge-apple {
                width: 100%;
                height: 100%;
                min-width: 0;
                min-height: 0;
                object-fit: contain;
                display: block;
              }
              .coming-soon {
                font-size: 0.8rem;
                margin-top: 0.1rem;
              }
            }
          </style>
        </div>
      </div>

      <!-- Right Content - Modern iPhone Mockup -->
      <div class="relative">
        <!-- iPhone Frame with more accurate proportions -->
        <div class="w-72 h-[580px] bg-gray-900 rounded-[3rem] p-2 mx-auto shadow-2xl">
          <!-- Screen -->
          <div class="w-full h-full bg-white rounded-[2.5rem] overflow-hidden">
            <!-- Modern iOS Status Bar -->
            <div class="px-6 py-4 flex justify-between items-center bg-white">
              <span class="text-sm font-semibold text-gray-900">9:41</span>
              <div class="flex items-center space-x-1">
                <!-- Signal bars -->
                <div class="flex space-x-1">
                  <div class="w-1 h-3 bg-gray-900 rounded-full"></div>
                  <div class="w-1 h-4 bg-gray-900 rounded-full"></div>
                  <div class="w-1 h-5 bg-gray-900 rounded-full"></div>
                  <div class="w-1 h-6 bg-gray-900 rounded-full"></div>
                </div>
                <!-- WiFi -->
                <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M1 9l2 2c4.97-4.97 13.03-4.97 18 0l2-2C16.93 2.93 7.07 2.93 1 9zm8 8l3 3 3-3c-1.65-1.66-4.34-1.66-6 0zm-4-4l2 2c2.76-2.76 7.24-2.76 10 0l2-2C15.14 9.14 8.87 9.14 5 13z"/>
                </svg>
                <!-- Battery -->
                <div class="w-6 h-3 border border-gray-900 rounded-sm relative">
                  <div class="w-4 h-2 bg-green-500 rounded-sm absolute top-0.5 left-0.5"></div>
                  <div class="w-0.5 h-1 bg-gray-900 rounded-r absolute -right-1 top-1"></div>
                </div>
              </div>
            </div>
            
            <!-- App Header -->
            <div class="px-6 py-4">
              <div class="flex items-center space-x-3 mb-6">
                <div class="w-10 h-10 bg-blue-600 rounded-xl flex items-center justify-center">
                  <span class="text-white font-bold">T</span>
                </div>
                <div>
                  <div class="font-bold text-gray-900">Tar</div>
                  <div class="text-sm text-gray-500">Everything app</div>
                </div>
              </div>
            </div>
            
            <!-- Service Grid -->
            <div class="px-6 grid grid-cols-2 gap-4">
              <!-- AI Agents -->
              <div class="bg-purple-50 p-4 rounded-xl">
                <div class="w-8 h-8 bg-purple-600 rounded-lg flex items-center justify-center mb-3">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                </div>
                <div class="text-sm font-semibold text-purple-900">AI Agents</div>
                <div class="text-xs text-purple-600">3 active</div>
              </div>
              
              <!-- Commerce -->
              <div class="bg-blue-50 p-4 rounded-xl">
                <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center mb-3">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                  </svg>
                </div>
                <div class="text-sm font-semibold text-blue-900">Commerce</div>
                <div class="text-xs text-blue-600">$2.4k today</div>
              </div>
              
              <!-- Delivery -->
              <div class="bg-yellow-50 p-4 rounded-xl">
                <div class="w-8 h-8 bg-yellow-600 rounded-lg flex items-center justify-center mb-3">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="text-sm font-semibold text-yellow-900">Delivery</div>
                <div class="text-xs text-yellow-600">47 orders</div>
              </div>
              
              <!-- More Services -->
              <div class="bg-gray-50 p-4 rounded-xl">
                <div class="w-8 h-8 bg-gray-400 rounded-lg flex items-center justify-center mb-3">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
                  </svg>
                </div>
                <div class="text-sm font-semibold text-gray-700">More</div>
                <div class="text-xs text-gray-500">Rides, Tasks, Chat</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Trust Indicators -->
      <div class="lg:col-span-2 pt-12 space-y-6 text-center">
        <p class="text-sm text-gray-500 font-medium">Trusted by teams at</p>
        
        <!-- Company Logos -->
        <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 opacity-60">
          <div class="text-lg font-semibold text-gray-400 tracking-wide">ORAI</div>
          <div class="text-lg font-semibold text-gray-400 tracking-wide">EYAL</div>
          <div class="text-lg font-semibold text-gray-400 tracking-wide">WETAR</div>
          <div class="text-lg font-semibold text-gray-400 tracking-wide">I</div>
        </div>
      </div>
    </div>
  </div>
</section>