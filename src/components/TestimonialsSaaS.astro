---
const testimonials = [
  {
    name: "Sarah Chen",
    role: "CEO, StyleCo",
    company: "Fashion Retailer",
    avatar: "https://images.unsplash.com/photo-1494790108755-2616b612b786?w=100&h=100&fit=crop&crop=face",
    content: "CommerceFlow transformed our business. We went from $50K to $2M in annual revenue within 18 months. The platform scales effortlessly with our growth.",
    rating: 5,
    metrics: {
      growth: "3900% revenue growth",
      time: "18 months"
    }
  },
  {
    name: "Marcus Rodriguez",
    role: "Founder, TechGear",
    company: "Electronics Store",
    avatar: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=100&h=100&fit=crop&crop=face",
    content: "The analytics and automation features are game-changing. We reduced manual work by 80% and increased conversion rates by 45% in just 6 months.",
    rating: 5,
    metrics: {
      efficiency: "80% less manual work",
      conversion: "45% higher conversions"
    }
  },
  {
    name: "Emily Watson",
    role: "Director of E-commerce, GreenLife",
    company: "Sustainable Products",
    avatar: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=100&h=100&fit=crop&crop=face",
    content: "Moving to CommerceFlow was the best decision we made. The multi-channel selling and inventory management saved us countless hours every week.",
    rating: 5,
    metrics: {
      time: "20+ hours saved weekly",
      channels: "5x more sales channels"
    }
  }
];

const stats = [
  { value: "50,000+", label: "Active Stores" },
  { value: "$2B+", label: "Sales Processed" },
  { value: "99.9%", label: "Uptime" },
  { value: "150+", label: "Countries" }
];
---

<section id="testimonials" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-medium mb-4">
        Customer Success
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Trusted by businesses
        <span class="text-primary-600">worldwide</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        From startups to enterprise companies, see how businesses are growing 
        with CommerceFlow's powerful e-commerce platform.
      </p>
    </div>

    <!-- Stats Bar -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-16 p-8 bg-gray-50 rounded-2xl">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-3xl font-bold text-gray-900 mb-2">{stat.value}</div>
          <div class="text-sm text-gray-600">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white border border-gray-200 rounded-2xl p-8 hover:shadow-lg transition-shadow duration-300">
          <!-- Rating -->
          <div class="flex text-yellow-400 mb-6">
            {Array.from({ length: testimonial.rating }, () => (
              <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>

          <!-- Content -->
          <p class="text-gray-700 mb-6 leading-relaxed text-lg">
            "{testimonial.content}"
          </p>

          <!-- Metrics -->
          <div class="grid grid-cols-1 gap-3 mb-6 p-4 bg-primary-50 rounded-lg">
            {Object.entries(testimonial.metrics).map(([key, value]) => (
              <div class="text-center">
                <div class="text-sm font-semibold text-primary-600">{value}</div>
              </div>
            ))}
          </div>

          <!-- Author -->
          <div class="flex items-center">
            <img 
              src={testimonial.avatar} 
              alt={testimonial.name}
              class="w-12 h-12 rounded-full object-cover mr-4"
            />
            <div>
              <h4 class="font-semibold text-gray-900">{testimonial.name}</h4>
              <p class="text-gray-600 text-sm">{testimonial.role}</p>
              <p class="text-gray-500 text-xs">{testimonial.company}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <p class="text-gray-600 mb-6">Join thousands of successful businesses</p>
      <button class="bg-primary-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-primary-700 transition-all transform hover:scale-105 shadow-lg">
        Start Your Success Story
      </button>
    </div>
  </div>
</section>