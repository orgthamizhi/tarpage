<header class="fixed top-0 w-full bg-white/80 backdrop-blur-md z-50 border-b border-gray-200 lg:relative lg:bg-transparent lg:backdrop-blur-none lg:border-b-0">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2 group">
          <img src="/tarbrand.png" alt="Tarbrand Logo" class="h-8 w-auto object-contain">
                    <span class="text-lg font-semibold text-gray-900">Tar</span>
        </a>
      </div>

      <!-- Navigation Links -->
      <div class="hidden lg:flex items-center space-x-8">
        <div class="relative group">
          <button class="text-gray-600 hover:text-gray-900 font-medium flex items-center">
            Product
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        
        <div class="relative group">
          <button class="text-gray-600 hover:text-gray-900 font-medium flex items-center">
            Download
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        
        <div class="relative group">
          <button class="text-gray-600 hover:text-gray-900 font-medium flex items-center">
            Solutions
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        
        <div class="relative group">
          <button class="text-gray-600 hover:text-gray-900 font-medium flex items-center">
            Resources
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        
        <a href="/pricing" class="text-gray-600 hover:text-gray-900 font-medium">Pricing</a>
      </div>

      <!-- Right Side Actions -->
      <div class="flex items-center space-x-4">
        <button class="text-gray-600 hover:text-gray-900 font-medium">
          Log in
        </button>
        <button class="bg-black hover:bg-gray-800 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200">
          Get Notion free
        </button>
      </div>

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button class="text-gray-600 hover:text-gray-900 p-2 focus:outline-none focus:ring-2 focus:ring-purple-500">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>