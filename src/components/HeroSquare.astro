---

<section class="pt-24 pb-32 bg-surface-primary">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-20 items-center min-h-[700px]">
      <!-- Hero Content -->
      <div class="space-y-10 animate-fade-in">
        <div class="space-y-8">
          <!-- Badge -->
          <div class="inline-flex items-center space-x-2 bg-surface-secondary border border-notion-200 px-4 py-2 rounded-xl shadow-notion-sm">
            <div class="w-2 h-2 bg-semantic-green rounded-full"></div>
            <span class="text-sm font-medium text-notion-700">Trusted by 4M+ businesses</span>
          </div>
          
          <!-- Main Headline -->
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-notion-900 leading-[1.1] tracking-tight">
            The point of sale for 
            <span class="text-semantic-blue">every sale</span>
          </h1>
          
          <!-- Subheading -->
          <p class="text-xl md:text-2xl text-notion-600 leading-relaxed max-w-2xl font-normal">
            From quick service to full service, online to in-person - get all the tools you need to start, run, and grow your business.
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="bg-notion-900 hover:bg-notion-800 text-white px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-200 shadow-notion hover:shadow-notion-md animate-scale-in">
            Get Started Free
          </button>
          <button class="border border-notion-300 hover:border-notion-400 hover:bg-surface-hover text-notion-700 px-8 py-4 rounded-xl text-lg font-semibold transition-all duration-200">
            Watch Demo
          </button>
        </div>

        <!-- Trust Indicators -->
        <div class="pt-12 space-y-6">
          <div class="flex items-center space-x-3">
            <div class="flex -space-x-2">
              <div class="w-8 h-8 bg-semantic-green rounded-full border-2 border-white shadow-notion-sm"></div>
              <div class="w-8 h-8 bg-semantic-blue rounded-full border-2 border-white shadow-notion-sm"></div>
              <div class="w-8 h-8 bg-semantic-purple rounded-full border-2 border-white shadow-notion-sm"></div>
              <div class="w-8 h-8 bg-semantic-orange rounded-full border-2 border-white shadow-notion-sm flex items-center justify-center text-white text-xs font-bold">+</div>
            </div>
            <p class="text-sm text-notion-600 font-medium">Join millions of businesses worldwide</p>
          </div>
          
          <!-- Company Logos -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center opacity-60">
            <div class="text-sm font-semibold text-notion-500 tracking-wider">SWEETGREEN</div>
            <div class="text-sm font-semibold text-notion-500 tracking-wider">PATAGONIA</div>
            <div class="text-sm font-semibold text-notion-500 tracking-wider">WEWORK</div>
            <div class="text-sm font-semibold text-notion-500 tracking-wider">EVENTBRITE</div>
          </div>
        </div>
      </div>

      <!-- Hero Visual - Notion-inspired Terminal -->
      <div class="relative flex justify-center lg:justify-end animate-slide-up">
        <!-- Main Terminal Device -->
        <div class="relative">
          <!-- Terminal Base -->
          <div class="w-80 h-96 bg-notion-50 rounded-2xl shadow-notion-xl relative overflow-hidden border border-notion-200">
            <!-- Screen -->
            <div class="absolute top-6 left-6 right-6 bottom-20 bg-white rounded-xl shadow-notion-inner border border-notion-100">
              <!-- Screen Content -->
              <div class="p-6 h-full flex flex-col">
                <!-- Header -->
                <div class="flex justify-between items-center mb-6">
                  <div class="text-base font-semibold text-notion-900">Tar OS Terminal</div>
                  <div class="text-sm text-notion-500 font-mono">12:34 PM</div>
                </div>
                
                <!-- Cart Items -->
                <div class="flex-1 space-y-4">
                  <div class="flex justify-between items-center p-4 bg-surface-secondary rounded-lg border border-notion-100">
                    <div>
                      <div class="font-semibold text-notion-900">Cappuccino</div>
                      <div class="text-sm text-notion-500">Large</div>
                    </div>
                    <div class="font-semibold text-notion-900">$4.50</div>
                  </div>
                  <div class="flex justify-between items-center p-4 bg-surface-secondary rounded-lg border border-notion-100">
                    <div>
                      <div class="font-semibold text-notion-900">Blueberry Muffin</div>
                    </div>
                    <div class="font-semibold text-notion-900">$3.25</div>
                  </div>
                </div>
                
                <!-- Total -->
                <div class="border-t border-notion-200 pt-4">
                  <div class="flex justify-between items-center">
                    <div class="font-bold text-notion-900">Total</div>
                    <div class="font-bold text-xl text-notion-900">$7.75</div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Terminal Base -->
            <div class="absolute bottom-6 left-6 right-6 h-12 bg-notion-800 rounded-xl flex items-center justify-center shadow-notion">
              <div class="w-8 h-1 bg-notion-400 rounded-full"></div>
            </div>
          </div>
          
          <!-- Card Reader -->
          <div class="absolute -right-4 top-1/2 transform -translate-y-1/2 w-12 h-20 bg-notion-700 rounded-xl shadow-notion-lg border border-notion-600">
            <div class="w-full h-1 bg-semantic-green rounded-t-xl"></div>
          </div>
        </div>

        <!-- Floating Payment Cards -->
        <div class="absolute -left-8 top-16 w-16 h-10 bg-gradient-to-r from-semantic-blue to-semantic-purple rounded-xl shadow-notion-lg transform rotate-12 animate-float"></div>
        <div class="absolute -left-4 top-32 w-16 h-10 bg-gradient-to-r from-semantic-green to-semantic-teal rounded-xl shadow-notion-lg transform -rotate-6 animate-float" style="animation-delay: 1s;"></div>
        
        <!-- Success Checkmark -->
        <div class="absolute -top-4 right-8 w-12 h-12 bg-semantic-green rounded-full flex items-center justify-center shadow-notion-lg animate-scale-in" style="animation-delay: 0.5s;">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>