<section class="py-20 bg-gradient-to-br from-primary-600 via-primary-700 to-blue-700">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="space-y-8">
      <div class="space-y-6">
        <h2 class="text-4xl md:text-5xl font-bold text-white leading-tight">
          Ready to transform your business?
        </h2>
        <p class="text-xl text-primary-100 max-w-2xl mx-auto leading-relaxed">
          Join 50,000+ businesses already growing with CommerceFlow. 
          Start your 14-day free trial today - no credit card required.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button class="bg-white text-primary-600 px-8 py-4 rounded-xl text-lg font-semibold hover:bg-gray-100 transition-all transform hover:scale-105 shadow-lg">
          Start Free Trial
        </button>
        <button class="border-2 border-white text-white px-8 py-4 rounded-xl text-lg font-semibold hover:bg-white hover:text-primary-600 transition-all">
          Schedule Demo
        </button>
      </div>

      <!-- Trust Indicators -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 pt-12 border-t border-primary-500">
        <div class="flex flex-col items-center text-primary-100">
