---

<section class="py-20 bg-gray-50">

  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
        Everything app
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
        Complete OS. All your business.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
      {features.map((feature, index) => (
        <div class={`${feature.bgColor} p-8 rounded-lg border border-gray-100`}>
          <!-- Icon -->
          <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mb-6 border border-gray-200">
            <svg class={`w-8 h-8 ${feature.iconColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon}/>
            </svg>
          </div>
          
          <!-- Content -->
          <h3 class="text-xl font-bold text-gray-900 mb-4 leading-tight">
            {feature.title}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>

  </div>
</section>