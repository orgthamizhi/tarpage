---
const plans = [
  {
    name: "Starter",
    price: "29",
    period: "month",
    description: "Perfect for new businesses and side projects",
    features: [
      "Up to 1,000 products",
      "2 staff accounts",
      "Basic analytics",
      "24/7 support",
      "SSL certificate",
      "Mobile-optimized checkout"
    ],
    popular: false,
    cta: "Start Free Trial"
  },
  {
    name: "Professional",
    price: "79",
    period: "month",
    description: "For growing businesses that need more power",
    features: [
      "Up to 10,000 products",
      "5 staff accounts",
      "Advanced analytics",
      "Priority support",
      "Custom domain",
      "Abandoned cart recovery",
      "Gift cards",
      "Professional reports"
    ],
    popular: true,
    cta: "Start Free Trial"
  },
  {
    name: "Enterprise",
    price: "299",
    period: "month",
    description: "For large businesses with advanced needs",
    features: [
      "Unlimited products",
      "Unlimited staff accounts",
      "Advanced analytics & AI",
      "Dedicated support manager",
      "Custom integrations",
      "Advanced automation",
      "Multi-currency",
      "Enterprise security",
      "Custom checkout"
    ],
    popular: false,
    cta: "Contact Sales"
  }
];
---

<section id="pricing" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-medium mb-4">
        Simple Pricing
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Choose the plan that
        <span class="text-primary-600">fits your business</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Start with a 14-day free trial. No credit card required. 
        Cancel anytime. All plans include our core features.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {plans.map((plan) => (
        <div class={`relative bg-white rounded-2xl shadow-lg border-2 transition-all duration-300 hover:shadow-xl ${
          plan.popular ? 'border-primary-500 scale-105' : 'border-gray-200 hover:border-primary-200'
        }`}>
          {plan.popular && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="bg-primary-600 text-white px-6 py-2 rounded-full text-sm font-medium">
                Most Popular
              </span>
            </div>
          )}
          
          <div class="p-8">
            <!-- Plan Header -->
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-2">{plan.name}</h3>
              <p class="text-gray-600 mb-6">{plan.description}</p>
              <div class="flex items-baseline justify-center">
                <span class="text-5xl font-bold text-gray-900">${plan.price}</span>
                <span class="text-gray-600 ml-2">/{plan.period}</span>
              </div>
            </div>

            <!-- Features List -->
            <ul class="space-y-4 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-primary-600 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>

            <!-- CTA Button -->
            <button class={`w-full py-4 px-6 rounded-xl font-semibold transition-all transform hover:scale-105 ${
              plan.popular 
                ? 'bg-primary-600 text-white hover:bg-primary-700 shadow-lg' 
                : 'bg-gray-100 text-gray-900 hover:bg-gray-200'
            }`}>
              {plan.cta}
            </button>
          </div>
        </div>
      ))}
    </div>

    <!-- Additional Info -->
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-4">
        All plans include 14-day free trial • No setup fees • Cancel anytime
      </p>
      <div class="flex items-center justify-center space-x-8 text-sm text-gray-500">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
          </svg>
          SSL Secured
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          99.9% Uptime
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          24/7 Support
        </div>
      </div>
    </div>
  </div>
</section>