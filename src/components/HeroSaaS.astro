---

<section class="pt-24 pb-20 bg-gradient-to-br from-gray-50 via-white to-primary-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Hero Content -->
      <div class="space-y-8">
        <div class="space-y-6">
          <div class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
            Trusted by 50,000+ businesses worldwide
          </div>
          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 leading-tight">
            Build your
            <span class="text-primary-600">commerce empire</span>
            in minutes
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed max-w-lg">
            The all-in-one commerce platform that grows with your business. 
            Create stunning stores, manage inventory, and scale globally with ease.
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="bg-primary-600 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:bg-primary-700 transition-all transform hover:scale-105 shadow-lg">
            Start Free Trial
          </button>
          <button class="border-2 border-gray-300 text-gray-700 px-8 py-4 rounded-xl text-lg font-semibold hover:border-gray-400 hover:bg-gray-50 transition-all">
            Watch Demo
          </button>
        </div>

        <!-- Trust Indicators -->
        <div class="flex items-center space-x-8 pt-8">
          <div class="text-center">
            <div class="text-3xl font-bold text-gray-900">50K+</div>
            <div class="text-sm text-gray-600">Active Stores</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-gray-900">$2B+</div>
            <div class="text-sm text-gray-600">Sales Processed</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-gray-900">99.9%</div>
            <div class="text-sm text-gray-600">Uptime</div>
          </div>
        </div>

        <!-- Trusted By -->
        <div class="pt-8">
          <p class="text-sm text-gray-500 mb-4">Trusted by leading brands</p>
          <div class="flex items-center space-x-8 opacity-60">
            <div class="text-lg font-bold text-gray-400">NIKE</div>
            <div class="text-lg font-bold text-gray-400">SPOTIFY</div>
            <div class="text-lg font-bold text-gray-400">AIRBNB</div>
            <div class="text-lg font-bold text-gray-400">UBER</div>
          </div>
        </div>
      </div>

      <!-- Hero Dashboard Mockup -->
      <div class="relative">
        <!-- Main Dashboard -->
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-200 overflow-hidden">
          <!-- Dashboard Header -->
          <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-red-400 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
                <div class="w-3 h-3 bg-green-400 rounded-full"></div>
              </div>
              <div class="text-sm text-gray-500">Dashboard</div>
            </div>
          </div>
          
          <!-- Dashboard Content -->
          <div class="p-6 space-y-6">
            <!-- Stats Cards -->
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-primary-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-primary-600">$24,580</div>
                <div class="text-sm text-gray-600">Revenue Today</div>
              </div>
              <div class="bg-green-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-green-600">1,247</div>
                <div class="text-sm text-gray-600">Orders</div>
              </div>
            </div>
            
            <!-- Chart Area -->
            <div class="bg-gray-50 h-32 rounded-lg flex items-center justify-center">
              <div class="text-gray-400">Sales Analytics Chart</div>
            </div>
            
            <!-- Recent Orders -->
            <div class="space-y-3">
              <div class="text-sm font-medium text-gray-900">Recent Orders</div>
              <div class="space-y-2">
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-primary-100 rounded-full"></div>
                    <div class="text-sm">Order #1234</div>
                  </div>
                  <div class="text-sm font-medium text-green-600">$299</div>
                </div>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-blue-100 rounded-full"></div>
                    <div class="text-sm">Order #1235</div>
                  </div>
                  <div class="text-sm font-medium text-green-600">$159</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Floating Notifications -->
        <div class="absolute -top-4 -right-4 bg-green-500 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg">
          New Sale: $299
        </div>
        <div class="absolute -bottom-4 -left-4 bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg">
          Revenue +15%
        </div>
      </div>
    </div>
  </div>
</section>